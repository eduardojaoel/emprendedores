{{ 'cs-info-bar.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
  	padding-top: calc({{ section.settings.padding_top }}px * 0.75);
  	padding-bottom: calc({{ section.settings.padding_bottom }}px  * 0.75);
  }

  @media screen and (min-width: 750px) {
  	.section-{{ section.id }}-padding {
  		padding-top: {{ section.settings.padding_top }}px;
  		padding-bottom: {{ section.settings.padding_bottom }}px;
  	}
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="section-{{ section.id }}-padding page-width">
    {% comment %} Main {% endcomment %}
    <div class="cs-info-bar__container">
      {% if section.settings.whatsapp_label != blank %}
        <div class="cs-info-bar__whatsapp cs-info-bar__item">
          <a
            {% if section.settings.whatsapp_link != blank %}
              href="{{ section.settings.whatsapp_link }}"
            {% endif %}
            class="full-unstyled-link"
          >
            {% render 'icon-whatsapp' %}
            <span>{{ section.settings.whatsapp_label }}</span>
          </a>
        </div>
      {% endif %}
      {% if section.settings.email_label != blank %}
        <div class="cs-info-bar__email cs-info-bar__item">
          <a
            {% if section.settings.email_link != blank %}
              href="{{ section.settings.email_link }}"
            {% endif %}
            class="full-unstyled-link"
          >
            {% render 'icon-email' %}
            <span>{{ section.settings.email_label }}</span>
          </a>
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Barra de información",
  "tag": "section",
  "class": "section cs-info-bar",
  "enabled_on": {
    "groups": ["header"]
  },
  "settings": [
    {
      "type": "text",
      "id": "whatsapp_label",
      "label": "Etiqueta de WhatsApp",
      "default": "WhatsApp"
    },
    {
      "type": "url",
      "id": "whatsapp_link",
      "label": "Enlace de WhatsApp"
    },
    {
      "type": "text",
      "id": "email_label",
      "label": "Etiqueta de correo electrónico",
      "default": "Correo electrónico"
    },
    {
      "type": "url",
      "id": "email_link",
      "label": "Enlace de correo electrónico"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-4"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 50,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 12
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 50,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 12
    }
  ],
  "presets": [
    {
      "name": "Barra de información"
    }
  ]
}
{% endschema %}
